
<div class="container">
    <div class="row">
        <div id="login-form-container" class="col">
            <div id="login-tile" >
                <div id="login-heading" class="row">
                    <div>
                        <h1 class="bi bi-chat-square-dots"> Welcome to Small Talk</h1>
                        <small>Please sign in</small>
                    </div>
                </div>    
                <div id="login-form" class="row">
                    <%= form_with url: login_path do |f| %>
                        <div class="mb-3">
                            <%= f.label :screen_name, "Screen Name", class: "form-label"  %>
                            <%= f.text_field :screen_name, class: "form-control"%>
                        </div>
                        <div class="mb-3">
                            <%= f.label :password, "Password", class: "form-label"  %>
                            <%= f.password_field :password, class: "form-control" %>
                        </div>
                        <div class="submit-links">
                            <%= f.submit "Login", class: "btn btn-success" %>
                            <%= link_to  "Sign Up", new_user_path, class: "link-success" %>
                        </div>
                    <% end %>
                </div>

                <% if flash[:message] %>
                    <div class="alert alert-danger">
                        <%= flash[:message] %>
                    </div>
                    
                <% end %>
            </div>
        </div>
    </div>
</div>