
<div class="container">
    <div class="row">
        <div class="col">
            <%= form_with url: login_path do |f| %>
                <div class="mb-3">
                    <%= f.label :screen_name, "Screen Name", class: "form-label"  %>
                    <%= f.text_field :screen_name, class: "form-control"%>
                    <div class="invalid-feedback">
                        Please choose a username.
                    </div>
                </div>
                <div class="mb-3">
                    <%= f.label :password, "Password", class: "form-label"  %>
                    <%= f.text_field :password, class: "form-control" %>
                </div>

                <%= f.submit class: "btn btn-primary" %>
            <% end %>
        </div>
    </div>
</div>