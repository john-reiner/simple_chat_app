<div class="container">
    <div class="row">
        <div class="col">
            <h2>New Chat</h2>
            <% if flash.notice || @chat.errors.count > 0%>
            <div class="alert alert-danger">
                <%= flash.notice || @chat.errors.full_messages %>
            </div>
            <% end %>
            <%= form_for @chat do |f| %>
                <%= f.label :name, "Screen Name" %>
                <%= f.text_field :name %>
                <%= f.submit %>
            <% end %>        
        </div>
    </div>
</div>