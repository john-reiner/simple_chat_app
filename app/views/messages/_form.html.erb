<%= form_with model: [user, chat, message], remote: true, class: 'd-flex', data: { controller: "reset-form", action: "turbo:submit-end->reset-form#reset"} do |f| %>
    
    <% if message.errors.any? %>
        <div class="alert alert-danger">
            <% message.errors.each do |err|%>
                <p><%= err.full_message %></p>
            <% end %>
        </div>
    <% end %>

    <%= f.text_field :content, id: 'chat-text', class: 'form-control msg-content', autocomplete: 'off' %>
    <%= f.submit "Send", data: {disable_with: false}, class: "btn btn-primary" %>

<% end %>