
<div class="container">
    <div class="row">
        <div class="col form-container">
            <div id="reg-tile" class="form-tile">
                <div class="row heading">
                    <h1 class="green">Registration</h1>
                </div>
                <div class="row-form">
                    <%= form_with model: @user do |f| %>
                            
                        <div class="mb-3">
                            <%= f.label :email, "Email", class: "form-label" %>
                            <%= f.text_field :email, class: "form-control" %>
                            <% if @user.errors[:email] %>
                                <div class="text-danger"><%= @user.errors[:email][0] %></div>

                            <% end %>
                        </div>
                        <div class="mb-3">
                            <%= f.label :screen_name, "Screen Name", class: "form-label"  %>
                            <%= f.text_field :screen_name, class: "form-control"%>
                            <% if @user.errors[:screen_name] %>
                                <div class="text-danger"><%= @user.errors[:screen_name][0] %></div>

                            <% end %>
                        </div>
                        <div class="mb-3">
                            <%= f.label :password, "Password", class: "form-label"  %>
                            <%= f.password_field :password, class: "form-control" %>
                            <% if @user.errors[:password] %>
                                <div class="text-danger"><%= @user.errors[:password][0] %></div>

                            <% end %>
                        </div>
                        <div class="mb-3">    
                            <%= f.label :password_confirmation, "Confirm Password", class: "form-label"  %>
                            <%= f.password_field :password_confirmation, class: "form-control" %>
                            <% if @user.errors[:password_confirmation] %>
                                <div class="text-danger"><%= @user.errors[:password_confirmation][0] %></div>

                            <% end %>
                        </div>

                        <div class="submit-links">
                            <%= f.submit "Submit", class: "btn btn-outline-success" %>
                            <%= link_to  "Login", new_session_path, class: "link-success" %>
                        </div>

                    <% end %>
                
                </div>
            </div>
        </div>
    </div>
</div>

